# Code Review Assistant Environment Configuration

# Application settings
DEBUG=True
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# Database settings
DATABASE_URL=postgresql://user:password@postgres:5432/code_review_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=code_review_db
DATABASE_USER=user
DATABASE_PASSWORD=password

# Redis settings
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery settings
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# LLM settings
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION=your-openai-org-id-here

# CrewAI settings
CREWAI_LOG_LEVEL=INFO
CREWAI_TELEMETRY_OPT_OUT=true

# Analysis settings
MAX_FILE_SIZE_MB=10
ANALYSIS_TIMEOUT_SECONDS=300
MAX_FILES_PER_ANALYSIS=50

# Security settings
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# API settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Development settings
RELOAD=True
WORKERS=1