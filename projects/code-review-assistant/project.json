{
  "name": "code-review-assistant",
  "type": "python",
  "description": "Multi-agent code review system using CrewAI and FastAPI",
  "services": ["postgres", "redis"],
  "ports": [8000, 8001],
  "scripts": {
    "dev": "uv run uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "test": "uv run pytest",
    "test-cov": "uv run pytest --cov=src --cov-report=term-missing",
    "lint": "uv run flake8 src tests",
    "format": "uv run black src tests",
    "format-check": "uv run black --check src tests",
    "type-check": "uv run mypy src",
    "security": "uv run bandit -r src",
    "build": "uv build",
    "install": "uv sync",
    "install-dev": "uv sync --all-extras"
  },
  "environment": {
    "PYTHONPATH": "src",
    "PROJECT_ROOT": "/workspaces/amai-lab/projects/code-review-assistant"
  },
  "dependencies": {
    "python": ">=3.11",
    "system": ["git", "docker"],
    "package_manager": "uv"
  }
}