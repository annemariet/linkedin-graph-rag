{
    "name": "Code Review Assistant",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12",
            "installTools": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "dockerDashComposeVersion": "v2"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-python.mypy-type-checker",
                "ms-python.pylint",
                "ms-python.pytest",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "eamodio.gitlens",
                "github.vscode-pull-request-github",
                "hbenl.vscode-test-explorer",
                "ms-vscode.test-adapter-converter",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "streetsidesoftware.code-spell-checker",
                "humao.rest-client",
                "42crunch.vscode-openapi"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "python.formatting.provider": "black",
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit",
                    "source.fixAll.flake8": "explicit"
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                },
                "git.autofetch": true,
                "git.enableSmartCommit": true,
                "files.associations": {
                    "*.env.example": "dotenv",
                    "*.env.local": "dotenv",
                    "Dockerfile*": "dockerfile",
                    "docker-compose*.yml": "dockercompose"
                }
            }
        }
    },
    "forwardPorts": [
        8000,
        5432,
        6379,
        5678
    ],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI Server",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "silent"
        },
        "6379": {
            "label": "Redis",
            "onAutoForward": "silent"
        }
    },
    "containerEnv": {
        "PYTHONPATH": "/workspace",
        "DOCKER_BUILDKIT": "1"
    },
    "postCreateCommand": "uv sync && pre-commit install",
    "remoteUser": "vscode",
    "initializeCommand": "echo 'Initializing Code Review Assistant devcontainer...'",
    "onCreateCommand": "echo 'Setting up Code Review Assistant development environment...'",
    "shutdownAction": "stopCompose",
    "overrideCommand": false
}