# LinkedIn API Client Environment Configuration

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here
LINKEDIN_REDIRECT_URI=http://localhost:8002/callback

# LinkedIn API Settings
LINKEDIN_API_VERSION=v2
LINKEDIN_BASE_URL=https://api.linkedin.com
LINKEDIN_SCOPE=r_liteprofile,r_emailaddress,w_member_social

# Development Server Settings
FLASK_APP=examples/flask_app.py
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0
PORT=8002

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Testing Settings
PYTEST_TIMEOUT=30
TEST_LINKEDIN_CLIENT_ID=test-client-id
TEST_LINKEDIN_CLIENT_SECRET=test-client-secret

# Security Settings
SECRET_KEY=your-flask-secret-key-change-in-production

# Rate Limiting Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10