{
    "name": "LinkedIn API Client",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11",
            "installTools": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-python.mypy-type-checker",
                "ms-python.pylint",
                "ms-python.pytest",
                "ms-python.vscode-pylance",
                "eamodio.gitlens",
                "github.vscode-pull-request-github",
                "hbenl.vscode-test-explorer",
                "ms-vscode.test-adapter-converter",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "streetsidesoftware.code-spell-checker",
                "humao.rest-client"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "python.formatting.provider": "black",
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit",
                    "source.fixAll.flake8": "explicit"
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                },
                "git.autofetch": true,
                "git.enableSmartCommit": true,
                "files.associations": {
                    "*.env.example": "dotenv",
                    "*.env.local": "dotenv"
                }
            }
        }
    },
    "forwardPorts": [
        8001,
        5679
    ],
    "portsAttributes": {
        "8001": {
            "label": "LinkedIn API Dev Server",
            "onAutoForward": "silent"
        },
        "5679": {
            "label": "Python Debugger",
            "onAutoForward": "silent"
        }
    },
    "containerEnv": {
        "PYTHONPATH": "/workspace"
    },
    "postCreateCommand": "uv sync && pre-commit install",
    "remoteUser": "vscode",
    "initializeCommand": "echo 'Initializing LinkedIn API Client devcontainer...'",
    "onCreateCommand": "echo 'Setting up LinkedIn API Client development environment...'",
    "shutdownAction": "stopCompose",
    "overrideCommand": false
}